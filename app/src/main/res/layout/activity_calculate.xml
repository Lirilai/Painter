<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.sberbank.learning.rates.Calculate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

    <EditText
        android:id="@+id/get_nominal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"

        android:layout_marginLeft="@dimen/margins_big"
        android:layout_marginTop="@dimen/margins_big"
        android:layout_marginRight="@dimen/margins_small"

        android:inputType="numberDecimal"
        android:maxLines="1"
        android:maxLength="10"


        android:layout_weight="1"

        tools:text="@string/load_name">
        <requestFocus>

        </requestFocus>
    </EditText>



    <TextView
        android:id="@+id/get_code"
        android:layout_width="match_parent"
        android:layout_height="33dp"

        android:layout_toRightOf="@id/get_nominal"

        android:layout_marginLeft="@dimen/margins_big"
        android:layout_marginTop="@dimen/margins_big"
        android:layout_marginRight="@dimen/margins_small"

        android:textSize="@dimen/title_size"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryText"
        android:gravity="center"

        android:layout_weight="2"

        tools:text="@string/title_activity_calculate"
        />
    </LinearLayout>

    <TextView
        android:id="@+id/get_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:textSize="@dimen/title_size"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryText"

        tools:text="@string/load_name"
        />



</RelativeLayout>
